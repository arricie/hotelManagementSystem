@model IEnumerable<MVC_webapp.Models.Bill>

@{
    ViewBag.Title = "Index";
}

<h2>Bills</h2>

<p>
    <button class="btn btn-primary" ng-click="ctrl.print()">Print</button>
</p>
<table class="table">
    <tr>
        <th>
         Room Number
        </th>
        <th>
           Name
        </th>
        <th>
            Surname
        </th>
        <th>
           Stayed Days
        </th>
        <th>
           Total Price
        </th>
        <th>
            Bill Date
        </th>
      
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RoomNum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumOfReservedDays)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BillDate)
        </td>
        <td>
            <a href='@Url.Action("Edit","Bills",new { id=item.BillID }, Request.Url.Scheme)' class="btn btn-xs btn-warning"><span class="glyphicon glyphicon-edit"></span> Edit</a>
            <a href='@Url.Action("Details","Bills", new { id=item.BillID }, Request.Url.Scheme)' class="btn btn-xs btn-info modal-link"><span class="glyphicon glyphicon-info-sign"></span> Details</a>
            <a href='@Url.Action("Delete","Bills", new { id=item.BillID }, Request.Url.Scheme)' class="btn btn-sx btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</a>
        </td>
    </tr>
}

</table>
